{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Django (Host 0.0.0.0)",
      "type": "debugpy",
      "request": "launch",
      "args": [
      "runserver",
      "0.0.0.0:8000",
      ],
      "django": true,
      "envFile": "${workspaceFolder}/.env",
      "autoStartBrowser": false,
      "program": "${workspaceFolder}\\manage.py"
    },
    {
      "name": "npm: Tailwind Dev",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Django + Tailwind",
      "configurations": [
        "Python Debugger: Django (Host 0.0.0.0)",
        "npm: Tailwind Dev"
      ],
      "presentation": {
        "order": 1
      }
    }
  ]
}